{
    "compilerOptions": {
      "outDir": "./.tsbuild/",
      "sourceMap": false,
      "target": "es2019",
      "module": "commonjs",
      "removeComments": true,
      "noImplicitAny": true,
      "strictPropertyInitialization": true,
      "strictNullChecks": true,
      "types": [
        "node",        
        "@wdio/sync", 
        "@wdio/cucumber-framework"
      ],
    },
    "include": [
      "./features/**/*.ts"
    ]
  }